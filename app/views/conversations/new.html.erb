<!-- Validation failure messages -->
<% if @conversation.errors.any? %>
  <% @conversation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Conversation</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_conversation" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="member_ids" class="control-label">
          To
        </label>

        <%= select_tag("member_ids", options_from_collection_for_select(User.all.reject {|user| user.id == current_user.id }, :id, :username), :multiple => true, :class => "form-control") %>
      </div>
      

      <button class="btn btn-success">
        Create Conversation
      </button>
      or
      <a href="/conversations">Cancel</a>
    </form>
  </div>
</div>
