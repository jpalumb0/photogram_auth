<!-- Validation failure messages -->
<% if @conversation.errors.any? %>
  <% @conversation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Conversation #<%= @conversation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_conversation/<%= @conversation.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @conversation.title %>">
      </div>

      <button class="btn btn-warning">
        Update Conversation
      </button>
      or
      <a href="/conversations/<%= @conversation.id %>">Cancel</a>
    </form>
  </div>
</div>
