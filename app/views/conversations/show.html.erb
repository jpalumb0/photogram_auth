<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title"><%= @conversation.title %> <small><%= time_ago_in_words(@conversation.created_at) %> ago</small></h2>
      </div>
      <div class="panel-body">
        
                
        <ul class="media-list">
          <% @conversation.messages.each do |message| %>
            <% if message.user.id == current_user.id %>
              <li class="media">
                <div class="media-body text-right">
                  <h6 class="media-heading">
                    <a href="/user/<%= message.user_id %>"><%= message.user.username %> </a><small><%= time_ago_in_words(message.created_at) %> ago</small>
                  </h6>
                  <%= message.body %>
                </div>
              </li>   
            <% else %>
              <li class="media">
                <div class="media-body">
                  <h6 class="media-heading">
                    <a href="/user/<%= message.user_id %>"><%= message.user.username %> </a><small><%= time_ago_in_words(message.created_at) %> ago</small>
                  </h6>
                  <%= message.body %>
                </div>
              </li>   
            <% end %>
          <% end %>
          <li class="media">
            <div class="media-body">
              <form class = "form-inline" action="/create_message" method="post">
                <input type="hidden" name="conversation_id" value="<%= @conversation.id %>">
                <input type="hidden" name="user_id" value="<%= current_user.id %>">
                
                  <div class="form-group">
                      <label class="sr-only" for="body"></label>
                      <input type="text" id="body" name="body" class="form-control" autofocus=true placeholder="Add a message..." required>
                  </div>

                  <div class="form-group">
                    <label class="sr-only" for="amount"></label>
                    <div class="input-group">
                      <div class="input-group-addon">$</div>
                      <input type="text" class="form-control" id="amount" name="amount" placeholder="Amount" >
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <label for="pay_to" class="control-label">
                      Pay to
                    </label>
            
                    <%= select_tag("pay_to", options_from_collection_for_select(@conversation.members.uniq.reject {|user| user.id == current_user.id }, :id, :username), :class => "form-control" ) %>
                  </div>
                  
                  <button type="submit" class="btn btn-default">Send</button>
                 

              </form>
            </div>
          </li>
        </ul>
                <% if @conversation.member_ids.include? current_user.id %>
                <td>
                  <a href="/delete_conversation/<%= @conversation.id %>" class="btn btn-danger" rel="nofollow">Delete Conversation?</a>
                </td>
                <% else %>
                <td>
                </td>
                <% end %>
      </div>
    </div>
  </div>
</div>


