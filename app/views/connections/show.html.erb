<div class="page-header">
  <h3><%= User.find(@connection.added_id).username %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Name</dt>
      <dd><%= User.find(@connection.added_id).username %></dd>
      
      <dt>Email</dt>
      <dd><%= User.find(@connection.added_id).email %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/connections" class="btn btn-primary">
        Back
      </a>
      <a href="/connections/<%= @connection.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_connection/<%= @connection.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
