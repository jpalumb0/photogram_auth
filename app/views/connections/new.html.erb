<!-- Validation failure messages -->
<% if @connection.errors.any? %>
  <% @connection.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Connection</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_connection" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for owner_id -->
      <div class="form-group">
        <input type="hidden" id="owner_id" name="owner_id" placeholder="Owner" class="form-control" value="<%= current_user.id %>">
      </div>

      <!-- Label and input for added_id -->
      <div class="form-group">
        <label for="added_id" class="control-label">
          Contact
        </label>

        <%= select_tag("added_id", options_from_collection_for_select(User.all.reject {|user| user.id == current_user.id }, :id, :username), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Connection
      </button>
      or
      <a href="/connections">Cancel</a>
    </form>
  </div>
</div>
