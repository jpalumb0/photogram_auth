<div class="page-header">
  <h1>
    Wallets
    <a href="/wallets/new" class="btn btn-lg btn-success">New Wallet</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Balance</th>
        <th>Actions</th>
      </tr>

      <% @wallets.each do |wallet| %>
      <tr>
        <td><%= User.find(wallet.user_id).username %></td>
        <td><%= wallet.balance %></td>
        <td>
          <a href="/wallets/<%= wallet.id %>" class="btn btn-primary">Details</a>
          <a href="/wallets/<%= wallet.id %>/edit" class="btn btn-warning">Deposit/Withdraw</a>
          <a href="/delete_wallet/<%= wallet.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
