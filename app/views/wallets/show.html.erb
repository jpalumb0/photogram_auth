<div class="page-header">
  <h3><%= @wallet.user.username %>'s wallet</h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @wallet.user.username %></dd>

      <dt>Balance</dt>
      <dd><%= @wallet.balance %></dd>
      
      <dt>Public Key</dt>
      <dd><%= @wallet.public_key %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/wallets" class="btn btn-primary">
        Back
      </a>
      <a href="/wallets/<%= @wallet.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_wallet/<%= @wallet.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
